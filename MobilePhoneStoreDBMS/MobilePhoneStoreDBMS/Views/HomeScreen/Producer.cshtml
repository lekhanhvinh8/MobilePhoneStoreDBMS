@model MobilePhoneStoreDBMS.Models.ViewModel
@{
	ViewBag.Title = "Producer";
	Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Producer</h2>
<div class="wrap">
	<div class="content" style="width: 950px; float: left;">
		<div class="content-grids">
			<h2 class="">Sản phẩm hiện bán tại cửa hàng</h2>
			@foreach (var items in Model.allProductsOfProducer)
			{
				<div class="grid_1_of_4 images_1_of_4 products-info">
					<a href="@Url.Action("Details" , "HomeScreen", new { id = items.ProductID })">
						<img src="@items.Image" />
						@items.Name
					</a>
					<h3>@items.Price &nbsp; VNĐ</h3>
					<ul>
						<li><a class="cart" href="#"> </a></li>
						<li><a class="i" href="#"> </a></li>
						<li><a class="Wishlist" href="#"> </a></li>
					</ul>
				</div>
			}
		</div>
	</div>
	<div class="content-sidebar">
		<h4>Hãng sản xuất</h4>
		<ul>
			<li><a href="@Url.Action("Store", "HomeScreen")">Tất cả</a></li>
				<li><a href="#">@Model.producer.Name</a></li>
		</ul>
	</div>
</div>
<div class="clear"></div>
