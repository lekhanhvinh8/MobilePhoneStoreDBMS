@model MobilePhoneStoreDBMS.Models.Dtos.RegisterDto

@{
    ViewBag.Title = "Index";
    Layout = null;
}
@{
    string right = "true";

    if (Model.Username == null)
    {
        right = "false";
    }
}

<html>
<head>
    <link href="~/Content/Account.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-color: #48d84f">
    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Name", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, "Phone", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Username, "Username", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "control-label" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", value = Model.Password })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Confirm, "Confirm Password", htmlAttributes: new { @class = "control-label" })
                    @Html.PasswordFor(model => model.Confirm, new { @class = "form-control", value = Model.Confirm })
                    @Html.ValidationMessageFor(m => m.Confirm)
                </div>

                <div class="form-group">
                    <input type="submit" value="Register Now!" class="btn btn-warning" style="background-color: #4cae4c" />
                </div>
            }

            <div>
                @Html.ActionLink("Back to Login", "Login", "Account")
            </div>
            <div>
                @Html.ActionLink("Go Home", "Index", "HomeScreen")
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $(document).ready(function () {

            if (@right == true) {
                bootbox.alert({
                    message: "Sign Up Success, Sign In Now !!!",
                    callback: function () {
                        var url = "@Url.Action("Login", "Account")";
			            url = decodeURI(url);

			            window.location.href = url;
                    }
                })
            }
		});
</script>
</body>




</html>