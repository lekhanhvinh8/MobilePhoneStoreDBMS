@model MobilePhoneStoreDBMS.Models.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<html>
<head>
    <link href="~/Content/Account.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #48d84f">
	<div class="login-page">
        <div class="form">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationMessageFor(m => m.RoleID)
                <div class="form-group">
                    @Html.LabelFor(model => model.AccountDto.Username, "Username", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.AccountDto.Username, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(m => m.AccountDto.Username)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AccountDto.Password, htmlAttributes: new { @class = "control-label" })
                    @Html.PasswordFor(model => model.AccountDto.Password, new { @class = "form-control", value = Model.AccountDto.Password })

                    @Html.ValidationMessageFor(m => m.AccountDto.Password)
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" style="background-color: #4cae4c" />
                </div>
                <div>
                    @Html.ActionLink("Register Now!", "Register", "Account")
                </div>
                <div>
                    @Html.ActionLink("Go Home", "Index", "HomeScreen")
                </div>
                @Html.HiddenFor(m => m.RoleID)
            }
        </div>
	</div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

</body>

</html>
    